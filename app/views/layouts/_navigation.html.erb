<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    
  </li>
</ul>


<ul class="nav_item">
  <!-- Category Dropdown Button -->
  <div class="btn-group">
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
     Categories
     <span class="caret"></span>
    </a>

    <ul class="dropdown-menu">
  <!-- Category options -->
      <% @category_sort.each do |cat| %>
        <li>
          <%= link_to cat.name, category_path(cat.id) %>
        </li>
      <% end %>
  <!-- Create New Category (show if logged in) -->
      <% if logged_in? %>
        <li class="divider"></li>
        <li>
          <%= link_to(new_category_path) do %>
            <i class="icon-plus"></i>
            New Category
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Show if Logged in -->
  <% if logged_in? %>
  <!-- Create New Post -->
  <div class="btn-group">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success btn-small" %>
  </div>
  <div class="btn-group">
  <!-- Dropdown User Button -->
    <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
      <%= current_user.username %>
      <span class="caret"></span>
    </a>

  <!-- Dropdown User Options -->
    <ul class="dropdown-menu">
      <li>
        <%= link_to '<i class="icon-pencil"></i> Edit Profile'.html_safe, edit_user_path(current_user) %>
      </li>
      <li>
        <%= link_to '<i class="icon-user"></i> View Profile'.html_safe, user_path(current_user) %>
      </li>
      <li>
        <%= link_to '<i class="icon-circle-arrow-left"></i> Logout'.html_safe, logout_path %>
      </li>
    </ul>
  </div>

  <% else %>

  <!-- Show if not logged in -->
  <%= link_to 'Login', login_path, class: "btn btn-success btn-small" %>
  <%= link_to 'Register', register_path, class: "btn btn-success btn-small" %>

  <% end %>

</ul>
